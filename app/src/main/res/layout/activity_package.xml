<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PackageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/edtpackageDetailsID"
                android:layout_width="452dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/under_line_package"
                android:textColor="#000000"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewSizeID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size_view"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtSizeID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewWeightID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/weight_view"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtWeightID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewLocationID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Location:"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtLocationID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewDestinationID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Destination:"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtDestinationID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:visibility="gone"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewDeliveryID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Deliveryman:"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtDeliveryID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#A5E3F4"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textViewStatusID"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Status:"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/edtStatusID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#000000"
                android:textSize="20sp"
                android:gravity="end"/>
        </LinearLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>